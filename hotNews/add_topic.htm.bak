<script language="JavaScript" type="text/JavaScript">
function AddItem(ItemId)
{
	
	var item=ItemId.split("|");
	var title;
	title = item[1];

	var rsc=item[0];
	// rsc的格式是.\upload******.ext(jpg,gif,exe,htm)
	//粗略，js的数组是一种对象数组
	
	var rscResult=rsc.split(".");
	var len = rscResult.length;
	var content="";
	for(var i = 1;i<len-1;i++)
	{
		alert(rscResult[i]);
		content+=rscResult[i]+".";
	}
	alert(content);
	var ext=rscResult[len-1];
	len = content.length;
	content=content.slice(0,len-1);
	if(ext.toLowerCase() == "jpg" || ext.toLowerCase() == "gif")
	{
		document.topic.topic_content.value += "<lable align=\"center\">" + title +"<\/lable>"+"</br>";
		//传入js的字符不能以空格分隔
		document.topic.topic_content.value += "<img " + "src="+content+"\."+ext+"></br>";
		//此处可为图片设置格式，防止过大，设置一个width或者一个height即可
	}
		
	else if(ext.toLowerCase() == "htm")
	{
		document.topic.topic_content.value += "<lable align=\"center\">" + title +"<\/lable>"+"</br>";
		document.topic.topic_content.value += "<iframe align=\"center\" src=\""+content+"\."+ext+"\" frameborder=0> </iframe></br>";
		
	}
	else
	{
		document.topic.topic_content.value = document.topic.topic_content.value + 
		"<a href=\""+content+"."+ext+"\">" + title + "</a></br>";
		
		//传入js的字符不能以空格分隔
	}	
}
     
function DeleteItem(ItemId)
{
	var item=ItemId.split("|");
	var title;
	title = item[1];

	var rsc=item[0];
	// rsc的格式是..\upload******.ext(jpg,gif,exe,htm)
	var rscResult=rsc.split(".");
	var content=rscResult[1];
	var contentResult=content.split("\\");
	var file=contentResult[contentResult.length-1];
	var ext=rscResult[2];
    //取得页面的内容
	var mTopic=document.topic.topic_content.value;
	//var test="upload";
	alert(mTopic);
	//定义资源正则表达式
	var regRsc;
	//定义位置 正则表达式
	//var regNum = new RegExp("附件([0-9])*:");
	//var nums;
	//此处定义附件所处位置变量
	//var num;
	//获得所有带附件的所有名目 加g
    var regAll = new RegExp("附件([0-9])*:","g");
	if((mTopic != "") && (ext.toLowerCase() == "jpg" || ext.toLowerCase() == "gif"))
	{
        //多行匹配加m
		var reg = new  RegExp("<lable([^>])*>"+title+"<\/lable></br>[^>]*"+file+"\."+ext+"></br>","m");
		//var reg = new RegExp("<lable([^>])*>"+title+"<\/lable>");
		regRsc = eval(reg);
		var result = mTopic.match(regRsc);
		alert("匹配结果"+result[0]);
        //nums = regNum.exec(result);
		//此处获得附件所处位置
	    //num = Number(nums[1]);
	}
	
	else if((mTopic != "") && (ext.toLowerCase() == "htm"))
	{
		var reg = new  RegExp("<lable([^>])*>"+title+"<\/lable><\/br>"+"<iframe[^>]*"+file+"."+ext+"([^>])*> <\/iframe><\/br>","m");
		regRsc = eval(reg);
		var result = mTopic.match(regRsc);
		alert(regRsc);
		alert("匹配结果"+result[0]);
	}
	
	else if(mTopic != "")
	{
		var reg = new  RegExp("<a href=\"\."+file+"\."+ext+"\">" + title +"</a></br>","m");
		regRsc = eval(reg);
		var result = mTopic.match(regRsc);
		alert("匹配结果"+result[0]);
	}
	else
	{
		;
	}
	// /g 匹配时候不能用regAll.exec(mTopic) 必须用mTopic.match()
	//var allResult = mTopic.match(regAll);
	//var rstLen = allResult.length;
	document.topic.topic_content.value = mTopic.replace(regRsc,"");
	
//	mTopic = document.topic.topic_content.value;
//不将后面的附件数目改变，这样相应的删除会失效，还用的是原来的参数	
